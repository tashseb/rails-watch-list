<div class="container mt-3">
  <div class="btn-toolbar justify-content-between pt-3">
    <div class="btn-group" role="group">
      <%= render 'lists/svg/icon' %>
    </div>
    <div class="btn-group">
      <p><%= link_to 'CREATE LIST', new_list_path, class: 'btn btn-outline-success'%></p>
    </div>
  </div>
</div>
<div class="d-flex justify-content-around bg-success">
  <% @lists.each do |list| %>
    <div class="card rounded p-3 m-3" style="width: 18rem;">
      <div class="card-category rounded" style="height: 300px; background-size: cover; background-repeat: no-repeat; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : "https://loremflickr.com/520/240/#{list.name}" %>)">
      </div>
      <div class="mt-3">
        <div class="card-list-info"><%= link_to list.name, list_path(list) %>
        </div>
      </div>
    </div>
  <% end  %>
</div>
