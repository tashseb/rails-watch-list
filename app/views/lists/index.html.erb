<div class="container mt-3">
  <div class="btn-toolbar justify-content-between pt-3">
    <div class="btn-group" role="group">
      <%= render 'lists/svg/icon' %>
    </div>
    <div class="btn-group">
      <p><%= link_to 'CREATE LIST', new_list_path, class: 'btn btn-outline-success'%></p>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <% @lists.each do |list| %>
      <div class="card" style="width: 18rem;">
        <%= image_tag "https://loremflickr.com/520/240/#{list.name}" %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
        </div>
      </div>
    <% end  %>
  </div>
</div>
